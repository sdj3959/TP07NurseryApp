<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterParentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:ignore="MissingConstraints"
        android:background="@color/white">
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="학부모 회원가입"-->
<!--            android:textColor="@color/brand"-->
<!--            android:textSize="23sp"-->
<!--            android:layout_gravity="center"/>-->
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 학부모 회원가입"
            android:textColor="@color/brand"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:layout_below="@id/tv"
            android:textSize="18sp"
            android:layout_alignRight="@id/tv_pw2"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/tv_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:layout_below="@id/tv_id"
            android:layout_alignRight="@id/tv_pw2"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/et_id"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="6~16자/한글불가"
            android:inputType="text"
            android:textSize="18sp"
            android:layout_alignLeft="@id/et_pw2"
            android:layout_below="@id/tv"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/brand"
            android:padding="8dp"
            android:ems="7"/>

        <Button
            android:id="@+id/btn_id_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중복확인"
            android:fontFamily="@font/bmjua"
            android:backgroundTint="@color/etc"
            android:layout_toRightOf="@id/et_id"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@id/et_id"/>

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="8~16자"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:layout_toRightOf="@id/tv_id"
            android:layout_below="@id/et_id"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@id/et_id"
            android:backgroundTint="@color/brand"
            android:padding="8dp"
            android:ems="7"/>

        <TextView
            android:id="@+id/tv_pw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 확인"
            android:layout_below="@id/tv_pw"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/et_pw2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="비밀번호 다시 입력"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:layout_toRightOf="@id/tv_pw2"
            android:layout_below="@id/et_pw"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/brand"
            android:padding="8dp"
            android:ems="7"/>

        <TextView
            android:id="@+id/tv_pw_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호가 다릅니다."
            android:textSize="12sp"
            android:textColor="#FFFF0000"
            android:layout_toRightOf="@id/et_pw2"
            android:layout_alignBottom="@id/et_pw2"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  우리 아이 정보"
            android:textColor="@color/gray"
            android:textSize="25sp"
            android:layout_below="@id/tv_pw2"
            android:layout_marginTop="50dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/tv2"
            android:layout_marginTop="10dp"
            android:src="@drawable/user"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이 이름"
            android:layout_toRightOf="@id/profile"
            android:layout_below="@id/tv2"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="아이 이름 입력"
            android:inputType="text"
            android:textSize="18sp"
            android:layout_toRightOf="@id/tv_name"
            android:layout_below="@id/tv2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/brand"
            android:padding="8dp"
            android:ems="7"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/profile"
            android:layout_alignLeft="@id/tv_name"
            android:layout_marginTop="23dp">

            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이 생년월일"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="2010.01.01"
                android:textSize="18sp"
                android:gravity="center"
                android:background="@drawable/bg_edit_date"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/profile"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  어린이집 선택"
                android:textColor="@color/gray"
                android:textSize="25sp"
                android:layout_marginTop="30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_margin="16dp"
                    android:entries="@array/city"
                    android:padding="8dp"/>
                <Spinner
                    android:id="@+id/spinner_gu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="16dp"
                    android:entries="@array/gu"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="조회"
                    android:fontFamily="@font/bmjua"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/etc"/>

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_nursery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:entries="@array/test"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:visibility="invisible"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원가입 완료"
            android:fontFamily="@font/bmjua"
            android:backgroundTint="@color/brand"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



</RelativeLayout>