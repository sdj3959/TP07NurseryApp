<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    app:contentPadding="16dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_thumbs"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/thumbs_up"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천합니다!"
            android:textSize="20sp"
            android:textColor="#0066FF"
            android:layout_toRightOf="@id/iv_thumbs"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:id="@+id/iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/one"
            android:padding="2dp"
            android:layout_below="@id/iv_thumbs"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv"
            android:text="제목입니다"
            android:textColor="@color/etc"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="30sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/iv_thumbs"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#8E8E8E"
            android:layout_below="@id/tv_title"
            android:layout_toRightOf="@id/iv"/>
<!--        <TextView-->
<!--            android:id="@+id/tv_tel"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="TEL : 02-111-3333"-->
<!--            android:textSize="20sp"-->
<!--            android:maxLines="1"-->
<!--            android:ellipsize="end"-->
<!--            android:layout_below="@id/tv_title"-->
<!--            android:layout_toRightOf="@id/iv"-->
<!--            android:layout_marginLeft="16dp"-->
<!--            android:padding="8dp"/>-->
<!--        <TextView-->
<!--            android:id="@+id/tv"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="주소 :"-->
<!--            android:padding="8dp"-->
<!--            android:layout_below="@id/iv"/>-->
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="서울특별시 성동구 왕십리로 122 한동타워 16층 5강의실"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_below="@id/line"
            android:layout_toRightOf="@id/iv"
            android:autoLink="web"
            android:padding="8dp"/>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#8E8E8E"
            android:layout_below="@id/iv"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="누르면 지도가 보여요!"
            android:textSize="20sp"
            android:textColor="@color/brand"
            android:layout_below="@id/line2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>
