<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterSelectActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:ignore="MissingConstraints"
        android:background="@color/white">
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="회원가입"-->
<!--            android:textColor="@color/brand"-->
<!--            android:textSize="23sp"-->
<!--            android:layout_gravity="center"/>-->
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원종류 선택"
        android:textColor="@color/gray"
        android:textSize="50sp"
        android:layout_above="@id/linear"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="25dp"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/btn_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학부모"
            android:textColor="@color/white"
            android:backgroundTint="@color/brand"
            android:fontFamily="@font/bmjua"
            android:drawableTop="@drawable/custom_image_family"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn_teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교사"
            android:textColor="@color/white"
            android:backgroundTint="@color/etc"
            android:fontFamily="@font/bmjua"
            android:drawableTop="@drawable/custom_image_teacher"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <Button
            android:id="@+id/btn_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원장"
            android:textColor="@color/white"
            android:backgroundTint="#787878"
            android:fontFamily="@font/bmjua"
            android:drawableTop="@drawable/custom_image_director"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
    </LinearLayout>


</RelativeLayout>